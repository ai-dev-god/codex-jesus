FROM node:20.18.1-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY tsconfig.json tsconfig.json
COPY src src
RUN npm run build

FROM node:20.18.1-alpine AS runtime
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev
COPY --from=build /app/dist dist
CMD ["node", "dist/index.js"]

